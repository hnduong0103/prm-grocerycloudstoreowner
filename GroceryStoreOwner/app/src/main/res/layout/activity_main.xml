<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.main.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/btProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_bill_button"
        android:onClick="clickToViewBill"/>

    <Button
        android:id="@+id/btProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_product_button"
        android:onClick="clickToViewProducts"/>

    <Button
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_login_button"
        android:onClick="clickToGoToLogin"/>

    <Button
        android:id="@+id/btReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_receipt_button"
        android:onClick="clickToGoToReceipt"/>

    <Button
        android:id="@+id/btCashier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_cashier_button"
        android:onClick="clickToViewCashiers"/>

</LinearLayout>