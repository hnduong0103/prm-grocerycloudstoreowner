<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.cashier.DeleteCashierActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:gravity="center"
        android:text="@string/cashier_delete_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/cashier_update_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cashier_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/cashier_update_store"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cashier_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/cashier_update_username"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cashier_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/cashier_update_status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cashier_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel_delete_cashier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/cashier_update_cancel" />

        <Button
            android:id="@+id/btn_confirm_delete_cashier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/cashier_update_confirm" />
    </LinearLayout>
</LinearLayout>