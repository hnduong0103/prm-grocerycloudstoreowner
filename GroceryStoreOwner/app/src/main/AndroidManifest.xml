<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grocerystoreowner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.StoreOwnerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroceryStoreOwner"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.inventory.CreateReceiptActivity"
            android:exported="false" />
        <activity
            android:name=".activity.inventory.ViewPendingList"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activity.inventory.ViewInventoryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.receipt.ViewReceiptDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.receipt.ViewReceiptActivity"
            android:exported="false" />
        <activity
            android:name=".activity.bill.ViewBillDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.event.EventListActivity"
            android:exported="true" />
        <activity
            android:name=".activity.brand.SwitchBrandActivity"
            android:exported="true" />
        <activity
            android:name=".activity.brand.BrandActivity"
            android:exported="true" />
        <activity
            android:name=".activity.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activity.bill.ViewBillActivity"
            android:exported="false" />
        <activity
            android:name=".activity.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>